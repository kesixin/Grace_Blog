/* pages/detail/index.wxss */

.feed-item {
  padding: 30rpx 30rpx 20rpx;
  margin: 0rpx 0 0 0;
  background: #fff;
}

.title {
  font-size: 16px;
  margin-bottom: 10px;
}

.listPic {
  margin-top: 10rpx;
  text-align: center;
}

.listPic image {
  width: 100%;
}

.tag-body {
  display: flex;
}

.postDate {
  margin-left: 5px;
}

.author {
  line-height: 30px;
  font-size: 10px;
  color: #738a94;
  font-family: 微软雅黑;
}

.content {
  padding: 10px 10px 20px 10px;
}

.wxParse-blockquote {
  font-family: Courier, Calibri, "宋体";
  background: #f5f5f5;
  border-left: 3px solid #dbdbdb;
  padding: 10px;
  margin: 0 10px;
  font-size: 13px;
  color: #666;
  line-height: 1.8;
}

/*评论*/

.comment {
  border-radius: 2px;
  margin-bottom: 7.5px;
  padding: 10px 15px;
  position: relative;
  align-items: center;
  background-color: white;
}

.comment-info {
  padding: 5px 0 7.5px 0;
  margin-bottom: 9px;
  color: gray;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  border-bottom: 1px solid #efefef;
}

.comment-author {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}

.comment-author-icon {
  width: 320px;
  height: 240px;
  display: inline-block;
  overflow: hidden;
  vertical-align: text-bottom;
  margin: 0;
  border-radius: 10%;
  max-width: 34px;
  max-height: 34px;
}

.comment-author-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 12px;
  padding-left: 9px;
}

.comment-author-position {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 12px;
  padding-left: 5px;
}

.h2w-light {
  color: #333;
  background-color: white;
}

.h2w__p {
  margin-bottom: 15px;
  font-size: 14px;
}

.zan-c-red {
  color: #f44;
  font-size: 12px;
  margin-bottom: 10px;
}

/*底部框*/

.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 0 6px rgba(30, 20, 20, 0.1);
  z-index: 1;
}

.comment-box {
  padding: 16rpx 4rpx;
  display: flex;
  justify-content: center;
}

.comment-box .icon-home {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 6rpx;
}

.comment-box .icon-add {
  margin-right: 10rpx;
  display: flex;
  align-items: center;
}

.comment-area {
  border: 1px solid #ccc;
  margin-top: 20rpx;
  max-width: 800rpx;
}

.comment-button {
  width: 140rpx;
  display: flex !important;
  flex-direction: column;
  justify-content: center;
  margin-right: 22rpx;
  border-bottom-left-radius: 0;
  border-radius: 6px !important;
  text-align: center;
  padding: 0 2px !important;
  font-size: 12px;
  background-color: #f5f7f7;
  color: #959595;
  height: 34px;
}

.comment-button::after {
  border: none;
}

.comment-input {
  background-color: #f5f7f7;
  padding: 2px 3px 2px 10px;
  font-size: 14px;
  height: 25px;
  max-height: 25px;
  min-height: 30px;
  width: 66%;
  text-align: left;
  margin-left: 10px;
}

.share-button {
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  top: 0;
  left: 0;
}

.menu-box {
  position: relative;
  height: 80px;
  padding: 5px 0;
  box-sizing: border-box;
  margin-bottom: -80px;
}

.emoji-move-in {
  animation: emoji-move-in 0.3s forwards;
}

.emoji-move-out {
  animation: emoji-move-out 0.3s forwards;
}

.no-emoji-move {
  animation: none;
}

@-webkit-keyframes emoji-move-in {
  0% {
    margin-bottom: -80px;
  }

  100% {
    margin-bottom: 0;
  }
}

@keyframes emoji-move-in {
  0% {
    margin-bottom: -80px;
  }

  100% {
    margin-bottom: 0;
  }
}

@-webkit-keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -80px;
  }
}

@keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -80px;
  }
}

.iconList {
  text-align: center;
  border-top: 1px solid #eee;
}

.iconLine {
  margin-top: 20rpx;
}

.iconLine text {
  font-size: 24rpx;
  text-align: center;
  color: #959595;
}

.iconLine view {
  text-align: center;
}

.iconLine .icon-type {
  width: 20%;
  position: relative;
  float: left;
  text-align: center;
}

.img-menu {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  text-align: center;
}

.open {
  width: 30px;
  height: 30px;
}

.need-login {
  height: 45px;
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 16px;
}

.resp-head {
  color:#aaa;
  margin:13px 0 13px 10px;
  font-size:13px;
  padding-bottom:60px;
  text-align:center;
}
.resp-head1 {
  color:#ff6a6a;
  margin:13px 0 13px 10px;
  font-size:13px;
}
.adContainer {
  position: relative;
  bottom: 0;
